{
    "name": "prettier-configure",
    "version": "1.0.4",
    "repository": "ssh://git@github.com/sosukesuzuki/prettier-configure.git",
    "license": "MIT",
    "author": "Sosuke Suzuki <aosukeke@gmail.com>",
    "main": "./build/index.js",
    "bin": "./bin/prettier-configure.js",
    "files": [
        "build/**/*",
        "bin/**/*"
    ],
    "scripts": {
        "build": "rm -rf ./build && tsc",
        "build:watch": "tsc --watch",
        "format": "prettier --write \"**/*.{js,ts,tsx,md,json,yaml,html}\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "detect-indent": "^6.0.0",
        "execa": "^2.0.4",
        "minimist": "^1.2.0",
        "node-emoji": "^1.10.0",
        "ora": "^3.4.0"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.0",
        "@types/node": "^12.7.5",
        "@types/node-emoji": "^1.8.1",
        "@types/prettier": "^1.18.2",
        "husky": "^3.0.5",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "typescript": "^3.6.3"
    }
}
